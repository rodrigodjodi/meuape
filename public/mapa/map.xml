<krpano>
  <events name="sibebar_events" keep="true"
    onresize="sidebar-adjust"
  />
  <action name="sidebar-adjust">
    
    if(stageheight LT 480,
    set(layer[logo].url, mapa/logo-header-small.png);
    set(layer[map].y, 60);,
    set(layer[logo].url, mapa/logo-header.png);
    set(layer[map].y, 200);
    );
  </action>    
  <layer name="menu" 
    type="image"
    url="ic_menu_white_24dp_2x.png"
    onclick="sidebar_open"
    keep="true"
    visible="true"
    x="8"
    y="8"
    zorder="10"
  />
  <action name="sidebar_open">
    set(layer[menu].visible, false);
    set(layer[skin_layer].visible, false);
    set(layer[sidebar].visible, true);
    tween(layer[sidebar].x, 0, 0.3, default);

  </action>
  <layer name="sidebar"
    type="container"
    height="100%"
    width="320"
    keep="true"
    bgcolor="0x333333"
    bgalpha="0.5"
    x="-320"
    zorder="2"
    visible="false"
    bgshadow="6 0 5 black 0.4"
     
  />
  <layer name="logo"
     type="image"
     url="logo-header.png" 
     keep="true"
     visible="true"
     parent="sidebar"
     handcursor="false"
     
   
  />
  <layer name="close"
     type="image"
     url="ic_close_white_24dp_2x.png" 
     keep="true"
     visible="true"
     parent="sidebar"
     x="8"
     y="8"
     onclick="sidebar_close"
     zorder="10"
  />

 <action name="sidebar_close">
   
   set(layer[skin_layer].visible, true);
   tween(layer[sidebar].x, -320, 0.3, default, set(layer[menu].visible, true);set(layer[sidebar].visible, false););
 </action>

  <layer name="map"
            url="map.png"
            keep="true"
            handcursor="false"
            capture="false"
            align="lefttop"
            x="-10"
            y="200"
            scale="0.8"
            scalechildren="true"
            visible="true"
            parent="sidebar"
            zorder="3"
  />
    <style name="mapspot"
            keep="true"
            scale="1"
            url="led-blue-off.png"
            parent="map"
            align="lefttop"
            edge="center"
            alpha="1"
             zorder="7"
             onclick="mapspot_loadscene(get(linkedscene));"
    />
    <style name="mapspot-visited"
            keep="true"
            scale="1"
            url="led-blue-on.png"
            parent="map"
            align="lefttop"
            edge="center"
            alpha="1"
             zorder="7"
             onclick="mapspot_loadscene(get(linkedscene));" />

    <layer name="activespot"
            scale="1"
            url="led-green-on.png"
            keep="true"
            alpha="1"
	        align="lefttop"
            zorder="10" />      

    <plugin name="radar" keep="true"
           url.flash="%SWFPATH%/plugins/radar.swf"
	       url.html5="%SWFPATH%/plugins/radar.js"
	       align="lefttop" zorder="1" edge="center"
	       fillalpha="0.5" fillcolor="0xFF5F3F"
	       linewidth="1.0" linecolor="0xE0E0A0" linealpha="0.5"
	       editmode="false" enabled="true" parent="map"
           
	/>  
    <!-- não funciona máscara em html5       
    <plugin name="mapmask" url="estar.png" keep="true" parent="map" enabled="false"
    />--> 
    <action name="mapspot_loadscene">
        loadscene(%1, null, MERGE, BLEND(1));
    </action>

    <action name="on_scene_loaded">
        set(plugin[radar].heading, %2);
        js(setupScene(%1));
    </action>
    
<!--Todos os spots do mapa -->
